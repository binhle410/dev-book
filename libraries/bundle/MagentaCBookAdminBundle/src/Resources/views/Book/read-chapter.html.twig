        }

        .hide {
            opacity: 0;
            display: none;
        }

        .show {
            /*width: 100px;*/
            /*height: 100px;*/
            /*background: red;*/

            -webkit-animation-name: pagination-group-anim; /* Safari 4.0 - 8.0 */
            -webkit-animation-duration: 1s; /* Safari 4.0 - 8.0 */
            -webkit-animation-delay: 2s; /* Safari 4.0 - 8.0 */
            animation-name: pagination-group-anim;
            animation-duration: 1s;
