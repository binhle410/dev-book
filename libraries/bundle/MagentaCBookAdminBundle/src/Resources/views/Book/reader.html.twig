{% extends base_book_template %}

{% block stylesheet %}
    <style>
        nav {
            height: 70px;
        }

        .spy-subchapter-navtitle {
            font-size: 0.8em;
        }

        .navbar-brand {
            margin: 0px !important;
        }

        #spy-chapter-navtitle, .spy-subchapter-navtitle {
            font-weight: bold;
        }

        .editing .offset-anchor {
            margin-top: 0px !important;
        }

        .offset-anchor {
            padding-top: 75px;
            margin-top: -75px;
        }

        .dropdown.show .dropdown-menu, .dropdown .dropdown-menu {
            background-color: white !important;
            box-shadow: 0 2px rgba(17, 16, 15, 0.1), 0 2px 10px rgba(17, 16, 15, 0.1);
        }

        .dropdown.show .dropdown-menu .dropdown-item:hover, .dropdown.show .dropdown-menu .dropdown-item:focus, .dropdown .dropdown-menu .dropdown-item:hover, .dropdown .dropdown-menu .dropdown-item:focus {
            background-color: #66615B;
        }

        .btn-neutral:hover, .btn-neutral:focus, .btn-neutral:active, .btn-neutral.active, .show > .btn-neutral.dropdown-toggle {
            color: unset;
        }

        .dropdown-item.active, .dropdown-item:active {
            background-color: white;
            font-weight: bold;
        }

        #toc-modal .modal-title {
            font-weight: bold;
        }

        #toc-modal .modal-body {
            padding: 20px;
        }

        #toc-modal a {
            font-size: 14px;
        }

        #edit-button, #save-button {
            float: right;
            font-size: 20px;
        }

        #toc-sidebar ul {
            list-style-type: none;
        }

        #toc-sidebar a {
            cursor: pointer;
        }

        .admin-buttons {
            position: fixed;
            right: 3vw;
            top: 100px;
        }

        .pagination {
            width: 280px;
            margin: auto;
        }

        .bottom-nav {
            height: 50px;
        }

        @media (max-width: 767px) {
            .admin-buttons {
                position: relative;
                top: -70px;
            }

            .pagination {
                width: 280px;
                margin: auto;
            }

            .bottom-nav {
                height: 90px;
            }

        }

    </style>
{% endblock %}

           {% block body_attributes -%}
               class="sidebar-collapse sonata-bc skin-purple-light skin-red-light fixed
               {% if app.request.cookies.get('sonata_sidebar_hide') -%}
                   sidebar-collapse
               {%- endif -%}"
           {%- endblock -%}

{% block nav_title %}
    <div class="dropdown chapter-nav">
        <a href="#" class="btn-neutral dropdown-toggle" data-toggle="dropdown">
            <span id="spy-chapter-navtitle">Your book on the cloud</span>
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li class="dropdown-header">Choose chapter</li>
            {% for i, chapter in book.rootChapters %}
                <a class="dropdown-item" href="#chapter-{{ i+1 }}">{{ i+1 }}. {{ chapter.name }}</a>
            {% endfor %}
        </ul>
    </div>

    {% for i, chapter in book.rootChapters %}
        <div class="dropdown subchapter-nav" id="chapter-{{ i+1 }}-nav" style="display: none">
            <a href="#" class="btn-neutral dropdown-toggle" data-toggle="dropdown">
                <span class="spy-subchapter-navtitle"></span>
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li class="dropdown-header">Choose sub-chapter</li>
                {% for ii, sub in chapter.subChapters %}
                    <a class="sub dropdown-item" href="#chapter-{{ i+1 }}-{{ ii+1 }}">{{ i+1 }}.{{ ii+1 }}
                        . {{ sub.name }}</a>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
{% endblock %}

{% block body %}
    <div style="padding-top:35px;"></div>
    <div class="container">
        <div class="row">
            <div class="d-none d-md-block col-md-4 book-toc">
                <div class="positionh" {#style="position: fixed"#}>
                    {% block new_chapter %}{% endblock %}
                    {% block toc_heading %}<h3>Table of contents</h3> {% endblock %}
                    {% block toc_help %} {% endblock %}
                    <div id="toc-sidebar"></div>
                </div>
            </div>
            <div class="col-md-8 book-content">
                {% block book_title %}
                    <div class="editable" data-objectid="{{ mainContentItem.id }}" data-type="main-content"
                         data-field="name">
                        <h2 style="text-align: center">{% block content_title %}{{ mainContentItem.name|raw }}{% endblock %}</h2>
                    </div>
                {% endblock %}
                <div class="editable" data-objectid="{{ mainContentItem.id }}" data-type="main-content"
                     data-field="text">
                    {% block content_body %}{{ mainContentItem.text|raw }}{% endblock %}
                </div>
                <div class="admin-buttons">
                    {#<i id="edit-button" class="fa fa-edit hand-hover"></i>#}
                    {#<i id="save-button" class="fa fa-save hand-hover" style="display: none;"></i>#}
                </div>

                {% block chapters %}

                {% endblock %}

                <nav class="bottom-nav">
                    {% block pagination %}
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                    {% endblock %}
                </nav>
            </div>
        </div>
    </div>
    <div class="d-md-none"
         style="position: fixed; width: 100%; bottom: 0px; background-color: white; text-align: center; padding: 5px 0px;">
        <a class="btn btn-outline-primary btn-sm btn-border btn-round"
           href="{{ path('magenta_book_index', {'accessCode': accessCode, 'employeeCode': employeeCode}) }}">HOME</a>
        <a class="btn btn-sm btn-outline-primary btn-border btn-round"
           href="{{ path('magenta_book_contact', {'accessCode': accessCode, 'employeeCode': employeeCode}) }}">CONTACTS</a>
        <a class="btn btn-sm btn-outline-primary btn-border btn-round" href="" data-toggle="modal"
           data-target="#toc-modal">BOOK TOC </a>
    </div>
    <div class="modal fade" id="toc-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center">{{ book.name }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <div class="right-side">
                        <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts_book %}
    <script>
        {% import _self as toc_tree %}
        {% macro navigate_child(collection, admin, depth) %}
        {% import _self as toc_tree %}
        [
            {%- for ii, sub in collection -%}
            {
                id: {{ sub.id }},
                name: '{{ sub.name|raw|e('js') }}',
                href: '#chapter-{{ sub.listNumber }}',
                chapterId: '{{ sub.id }}',
                {% if sub.subChapters|length > 0 %}
                children: {{ toc_tree.navigate_child(sub.subChapters,admin,depth +1) }},
                {%- endif -%}
            },
            {%- endfor -%}
        ]
        {% endmacro %}

        var toc = {{ toc_tree.navigate_child(book.rootChapters,admin,0) }}

        {#var toc = [#}
            {#{% for i, chapter in book.rootChapters %}#}
            {#{#}
                {#id: {{ chapter.id }},#}
                {#name: '{{ chapter.name|raw }}',#}
                {#href: '#chapter-{{ i+1 }}',#}
                {#chapterId: '{{ chapter.id }}',#}
                {#children: [#}
                    {#{% for ii, sub in chapter.subChapters %}#}
                    {#{#}
                        {#id: {{ sub.id }},#}
                        {#name: '{{ sub.name|raw }}',#}
                        {#href: '#chapter-{{ i+1 }}-{{ ii+1 }}',#}
                        {#chapterId: '{{ sub.id }}',#}
                    {#},#}
                    {#{% endfor %}#}
                {#]#}
            {#},#}
            {#{% endfor %}#}
        {#]#}

        {% block onCreateLi %}
        window.onCreateLi = function (node, $li) {
            // $li.find('.jqtree-title').html(
            //     `<a href="${node.href}">${node.name}</a>  <i class="fa fa-plus-circle" aria-hidden="true"> </i>`
            // );
        }
        {% endblock %}

        $(document).ready(($) => {
            var $tocSidebar = $('#toc-sidebar');
            $tocSidebar.tree({
                data: toc,
                closedIcon: $('<i class="fa fa-arrow-circle-right"></i>'),
                openedIcon: $('<i class="fa fa-arrow-circle-down"></i>'),
                dragAndDrop: false,
                saveState: true,
                onCreateLi: onCreateLi
            });

            {% block toc_click %}
            $tocSidebar.on(
                'tree.click',
                function (event) {
                    // The clicked node is 'event.node'
                    // var node = event.node;
                    // alert(node.name);
                    console.log('clicked', event);
                    window.location = (event.node.href);
                }
            );
            {% endblock %}

            var node = $tocSidebar.tree('getNodeById', {{ mainContentItem.id }});
            $tocSidebar.tree('selectNode', node);

            {% block toc_modal %}
            $('#toc-modal .modal-body').tree({
                data: toc,
                closedIcon: $('<i class="nc-icon nc-minimal-right"></i>'),
                openedIcon: $('<i class="nc-icon nc-minimal-down"></i>'),
                dragAndDrop: false,
                // onCreateLi: function (node, $li) {
                //     $li.find('.jqtree-title').html(
                //         `<a href="${node.href}" class="chapter-link">${node.name}</a>`
                //     );
                // }
            });

            $('#toc-modal a.chapter-link').click(() => {
                $('#toc-modal').modal('hide');
            })
            {% endblock %}

            $('body').scrollspy({target: '#cbook-navbar', offset: 75})
            $(window).scroll((e) => {
                var currentChapter = $('.dropdown-item.active:not(.sub)').text();
                if (currentChapter) {
                    $('#spy-chapter-navtitle').text(currentChapter)
                } else {
                    if (typeof href != "undefined") {
                        var href = $('.dropdown-item.active').attr('href');
                        var id = href.substring(0, href.lastIndexOf('-'));
                        $('#spy-chapter-navtitle').text($(id).text());
                    } else {
                        // console.log('jquery lookup of (\'.dropdown-item.active\') is not found');
                    }
                }
                $('.subchapter-nav').hide();
                $('.sub.dropdown-item.active').parents('.subchapter-nav').show();
                $('.sub.dropdown-item.active').parents('.subchapter-nav').find('.spy-subchapter-navtitle').text($('.sub.dropdown-item.active').text());
                if ($(window).scrollTop() < 50) {
                    $('#spy-chapter-navtitle').text('Your book on the cloud');
                }
            })
        })
    </script>
{% endblock %}
